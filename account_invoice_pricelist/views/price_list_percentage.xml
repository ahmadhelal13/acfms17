<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_price_list_form" model="ir.ui.view">
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="color" options="{'color_field': 'color'}" widget="color_picker"/>
            </xpath>
            <xpath expr="//page[@name='pricelist_config']//field[@name='country_group_ids']" position="after">
                <div name="percentage">
                    <label for="percentage"/>
                    <field name="percentage" class="oe_inline"/>
(%%)
                </div>
            </xpath>
        </field>
    </record>
</odoo>