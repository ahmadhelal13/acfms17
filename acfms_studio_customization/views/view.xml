    <!-- product transfer -->

    <record id="view_product_transfer_internal_form_inherited_std" model="ir.ui.view">
        <field name="name">view_product_transfer_internal_form_inherited_std</field>
        <field name="model">product.transfer.internal</field>
        <field name="inherit_id" ref="product_transfer_internal.view_product_transfer_internal_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='source_location']" position="attributes">
                    <attribute name="domain">["&amp;","&amp;",("usage","=","inventory"),("name","!=","Inventory adjustment"),("name","!=","Scrap")]</attribute>
                    <attribute name="options">{"no_create_edit":true,"no_open":true,"no_create":true}</attribute>
                </xpath>
                <xpath expr="//field[@name='destination_location']" position="attributes">
                    <attribute name="domain">[("usage","=","internal")]</attribute>
                    <attribute name="options">{"no_create_edit":true,"no_open":true,"no_create":true}</attribute>
                </xpath>


                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{"no_create_edit":true,"no_create":true,"no_open":true}</attribute>
                </xpath>
                <xpath expr="//field[@name='product_uom_id']" position="attributes">
                    <attribute name="options">{"no_create_edit":true,"no_create":true,"no_open":true}</attribute>
                </xpath>
                <xpath expr="//field[@name='product_uom_id']" position="after">
                    <xpath expr="//field[@name='qty_available']" position="move"/>
                </xpath>
                <xpath expr="//field[@name='default_code']" position="attributes">
                    <!--TODO: Result from converting 'attrs' attribute override without options for ['required', 'readonly', 'column_invisible'] to separate attributes
                         Remove redundant empty tags below for any of those attributes that are not present in the field tag in any of the parent views
                         If someone later adds one of these attributes in the parent views, they would likely be unaware it's still overridden in this view, resulting in unexpected behaviour, which should be avoided-->
                    <attribute name="required"/>
                    <attribute name="readonly"/>
                    <attribute name="column_invisible"/>
                    <attribute name="groups">base.group_system</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='prod_type']" position="attributes">
                    <!--TODO: Result from converting 'attrs' attribute override without options for ['required', 'readonly', 'column_invisible'] to separate attributes
                         Remove redundant empty tags below for any of those attributes that are not present in the field tag in any of the parent views
                         If someone later adds one of these attributes in the parent views, they would likely be unaware it's still overridden in this view, resulting in unexpected behaviour, which should be avoided-->
                    <attribute name="required"/>
                    <attribute name="readonly"/>
                    <attribute name="column_invisible"/>
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='dest_qty']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//field[@name='qty_available']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
            </data>
        </field>
    </record>

    <record id="view_product_transfer_internal_tree" model="ir.ui.view">
        <field name="name">view_product_transfer_internal.tree</field>
        <field name="model">product.transfer.internal</field>
        <field name="inherit_id" ref="product_transfer_internal.view_product_transfer_internal_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='manager_id']" position="after">
                <field name="source_location"/>
                <field name="destination_location"/>
            </xpath>
        </field>
    </record>
