<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.FormView" t-inherit-mode="extension">
        <xpath expr="//t[@t-set-slot='control-panel-create-button'][1]//t[@t-if='canCreate'][1]" position="inside">
            <t t-if="props.ShowReadPaci">
                <button type="button" class="btn btn-secondary o_form_read_card" t-on-click="onClickSyncPaci">Read Card</button>
            </t>
        </xpath>
        <xpath expr="//t[@t-set-slot='control-panel-create-button'][2]//t[@t-if='canCreate']" position="inside">
            <t t-if="props.ShowReadPaci">
                <button type="button" class="btn btn-outline-primary o_form_read_card" t-on-click="onClickSyncPaci">Read Card</button>
            </t>
        </xpath>
    </t>
    <t t-inherit="web.FormView.Buttons" t-inherit-mode="extension">
        <xpath expr="//div[@t-elif='canCreate']" position="inside">
            <t t-if="props.ShowReadPaci">
                <button type="button" class="btn btn-secondary o_form_read_card" t-on-click="onClickSyncPaci">Read Card</button>
            </t>
        </xpath>
    </t>
    <t t-inherit="web.ListView.Buttons" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_list_buttons')]" position="inside">
            <t t-if="props.ShowReadPaci">
                <button type="button" class="btn btn-primary o_form_read_card" t-on-click="onClickSyncPaci">Search Card</button>
            </t>
        </xpath>
    </t>
    <t t-inherit="web.KanbanView.Buttons" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_cp_buttons')]" position="inside">
            <t t-if="props.ShowReadPaci">
                <button type="button" class="btn btn-primary o_form_read_card" t-on-click="onClickSyncPaci">Search Card</button>
            </t>
        </xpath>
    </t>
</templates>
