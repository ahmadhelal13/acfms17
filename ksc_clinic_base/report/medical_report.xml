<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="medical_report_template">
        <div t-attf-class="header" t-att-style="report_header_style">
            <div class="row">
                <img src="/ksc_clinic_base/static/description/logo.jpeg" style="height: 120px; width: 100%;"/>
            </div>
        </div>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-if="o.medical_report">
                            <table class="table table-bordered table-sm">
                                <thead>
                                    <th>Patient</th>
                                    <th>Doctor</th>
                                    <th>Date</th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span t-field="o.patient_id"/>
                                        </td>
                                        <td>
                                            <span t-field="o.physician_id"/>
                                        </td>
                                        <td>
                                            <span t-field="o.start_date"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <h1 style="text-align:center;">Medical Report</h1>
                            <span t-field="o.medical_report"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="medical_report_action" model="ir.actions.report">
        <field name="name">Medical Report</field>
        <field name="model">ksc.appointment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ksc_clinic_base.medical_report_template</field>
        <field name="report_file">ksc_clinic_base.medical_report_template</field>
        <field name="binding_model_id" ref="model_ksc_appointment" />
        <field name="binding_type">report</field>
    </record>

</odoo>