    <!-- ========================clinical assement=================== -->

    <template id="patient_evaluation_template" name="patient_evaluation_template">
        <h3 style="text-align:center;margin-top:10%">Clinical Assesment</h3>
        <br/>
        <table class="table table-bordered table-sm" style="width:100%;border-collapse: collapse">

            <thead >
                <tr>
                    <th style="width:50%;border:1px solid black;">Paramter</th>
                    <th style="width:50%;border:1px solid black;">Value</th>
                </tr>
            </thead>
            <tbody style="border:1px solid black;">
                <tr>
                    <td style="width:50%;border:1px solid black;">
                        <strong>Weight</strong>
                    </td>
                    <td style="width:50%;border:1px solid black;">
                        <span t-field="doc.weight" />
                    </td>
                </tr>
                <tr>
                    <td style="width:50%;border:1px solid black;">
                        <strong>Height</strong>
                    </td>
                    <td style="width:50%;border:1px solid black;">
                        <span t-field="doc.height" />
                    </td>
                </tr>
                <tr>
                    <td style="width:50%;border:1px solid black;">
                        <strong>Temperature</strong>
                    </td>
                    <td style="width:50%;border:1px solid black;">
                        <span t-field="doc.temp" />
                    </td>
                </tr>
                <tr>
                    <td style="width:50%;border:1px solid black;">
                        <strong>HR</strong>
                    </td>
                    <td style="width:50%;border:1px solid black;">
                        <span t-field="doc.hr" />
                    </td>
                </tr>
                <tr>
                    <td style="width:50%;border:1px solid black;">
                        <strong>RR</strong>
                    </td>
                    <td style="width:50%;border:1px solid black;">
                        <span t-field="doc.rr" />
                    </td>
                </tr>
                <tr>
                    <td style="width:50%;border:1px solid black;">
                        <strong>Systolic BP</strong>
                    </td>
                    <td style="width:50%;border:1px solid black;">
                        <span t-field="doc.systolic_bp" />
                    </td>
                </tr>
                <tr>
                    <td style="width:50%;border:1px solid black;">
                        <strong>Diastolic BP</strong>
                    </td>
                    <td style="width:50%;border:1px solid black;">
                        <span t-field="doc.diastolic_bp" />
                    </td>
                </tr>
                <tr>
                    <td style="width:50%;border:1px solid black;">
                        <strong>Body Mass Index</strong>
                    </td>
                    <td style="width:50%;border:1px solid black;">
                        <span t-field="doc.bmi" />
                    </td>
                </tr>
                <tr>
                    <td style="width:50%;border:1px solid black;">
                        <strong>BMI State</strong>
                    </td>
                    <td style="width:50%;border:1px solid black;">
                        <span t-field="doc.bmi_state" />
