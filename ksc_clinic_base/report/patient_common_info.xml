<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============template for patient personal info=========== -->
    <template id="patient_info_template">

        <!-- ============template for patient personal info=========== -->
        <table style="font-size:13px;width:100%; border-collapse: collapse;">
            <tr style="border:1px solid black">
                <td style="border:1px solid black">
                    <span>Patient Name</span>
                </td>
                <td style="border:1px solid black" colspan="5">
                    <strong t-field="doc.name"/>
                </td>
                <td style="border:1px solid black">
                    <span>Age</span>
                </td>
                <td style="border:1px solid black">
                    <strong t-field="doc.age"/>
                </td>
            </tr>
            <tr style="border:1px solid black">
                <td style="border:1px solid black">
                    <span>Gender</span>
                </td>
                <td style="border:1px solid black" colspan="5">
                    <strong t-field="doc.gender"/>
                </td>
                <td style="border:1px solid black">
                    <span>DOB</span>
                </td>
                <td style="border:1px solid black">
                    <strong t-field="doc.birthday"/>
                </td>
            </tr>
            <tr style="border:1px solid black">
                <td style="border:1px solid black">
                    <span>Identification Code</span>
                </td>
                <td style="border:1px solid black" colspan="5">
                    <strong t-field="doc.code"/>
                </td>
                <td style="border:1px solid black">
                    <span>Civil.</span>
                </td>
                <td style="border:1px solid black">
                    <strong t-field="doc.civil"/>
                </td>
            </tr>
            <tr style="border:1px solid black">
                <td style="border:1px solid black">
                    <span>Nationality</span>
                </td>
                <td style="border:1px solid black" colspan="5">
                    <strong t-field="doc.nationality"/>
                </td>
                <td style="border:1px solid black">
                    <span>Phone.</span>
                </td>
                <td style="border:1px solid black">
                    <strong t-field="doc.phone"/>
                </td>
            </tr>
        </table>

    </template>
