                <t t-if="doc.remarks">
                    <p style="padding:0px 5px 25px 5px" t-esc="doc.remarks"/>
                </t>
                <t t-else="doc.remarks==false">
                    <p style="padding:35px 5px"/>
                </t>
            </div>
            <t t-if="doc">
