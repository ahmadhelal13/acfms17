<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="change_wizard_view_form" model="ir.ui.view">
        <field name="name">change.physician.wizard.view.form</field>
        <field name="model">change.physician.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="physician_id" />
                            <field name="clinic_name" invisible="1" force_save="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="change_physician" string="Change" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cancel_appointment_view_form" model="ir.ui.view">
        <field name="name">cancel.appointment.wizard.view.form</field>
        <field name="model">cancel.appointment.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="message" nolabel="1"/>
                    </group>
                    <footer>
                        <button name="confirm_cancel_appointment" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>