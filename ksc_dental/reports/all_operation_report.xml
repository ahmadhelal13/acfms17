<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="dental_all_operation_report_template">
            <div t-attf-class="header" t-att-style="report_header_style">
                <div class="row">
                    <img src="/ksc_clinic_base/static/description/logo.jpeg" style="height: 120px; width: 100%;"/>
                </div>
            </div>
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">

                        <div class="page">
                            <div class="row">
                                <div class="col-6">
                                    <strong>Name : </strong>
                                    <span t-field="doc.name" />
                                </div>
                                <div class="col-6">
                                    <strong>Date of Birth : </strong>
                                    <span t-field="doc.birthday" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Code : </strong>
                                    <span t-field="doc.code" />
                                </div>
                                <div class="col-6">
                                    <strong>Age : </strong>
                                    <span t-field="doc.age" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Gender : </strong>
                                    <span t-field="doc.gender" />
                                </div>
                                <div class="col-6">
                                    <strong>Marital Status : </strong>
                                    <span t-field="doc.marital_status" />
                                </div>
                            </div>
                            <br/>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Created by</th>
                                        <th>Tooth</th>
                                        <th>Description</th>
                                        <th>Surface</th>
                                        <th>Status</th>
                                        <th>Amount</th>
                                        <th>Discount %</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.teeth_treatment_ids" t-as="line">
                                        <td>
                                            <span t-field="line.create_uid"/>
                                        </td>
                                        <td>
                                            <span t-field="line.teeth_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.description"/>
                                        </td>
                                        <td>
                                            <span t-field="line.detail_description"/>
                                        </td>
                                        <td>
                                            <span t-field="line.state"/>
                                        </td>
                                        <td>
                                            <span t-field="line.amount"/>
                                        </td>
                                        <td>
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td>
                                            <span t-field="line.total"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Total : </strong>
                                    <span t-esc="sum([x.total for x in doc.teeth_treatment_ids])" />
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <report id="dental_all_operation_report_action" string="Dental All Operation" model="res.partner" report_type="qweb-pdf" file="ksc_dental.dental_all_operation_report_template" name="ksc_dental.dental_all_operation_report_template" print_report_name="'Dental All Operation -%s' %(object.name)" />
    </data>
</odoo>
