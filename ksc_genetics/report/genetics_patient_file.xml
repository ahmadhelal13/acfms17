<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="genetics_patient_file_template" name="genetics Patient File Report">
        <div t-attf-class="header" t-att-style="report_header_style">
            <div class="row">
                <img src="/ksc_clinic_base/static/description/logo.png" style="height: 100px;margin-bottom:0px"/>
            </div>
        </div>
        <t t-call="web.html_container">

            <t t-call="web.external_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="doc">
                        <div t-if="doc.medical_report">
                            <t t-call="ksc_genetics.medical_report_template"/>
                        </div>
                        <!-- this is for  Diseases -->
                        <div t-if="doc.diseases_ids">
                            <h3>
                                <u>Diseases</u>
                            </h3>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.diseases_ids" t-as="line">
                                        <td style="width:100%">
                                            <span t-field="line.disease_id.name" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- this is for  services -->
                        <div t-if="doc.service_line_ids">
                            <h3>
                                <u>Service Product</u>
                            </h3>
                            <table class="table table-striped">
                                <thead>
                                    <tr>

                                        <th>Service</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.service_line_ids" t-as="line">

                                        <td>
                                            <span t-field="line.product_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.qty"/>
                                        </td>
                                        <td>
                                            <span t-field="line.price"/>
                                        </td>
                                        <td>
                                            <span t-field="line.date"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>


                    </t>
                </div>

            </t>
        </t>
    </template>

    <record id="genetics_patient_file_action" model="ir.actions.report">
        <field name="name">genetics Patient File</field>
        <field name="model">ksc.genetics.appointment</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">ksc_genetics.genetics_patient_file_template</field>
        <field name="report_file">ksc_genetics.genetics_patient_file_template</field>
        <field name="binding_model_id" ref="model_ksc_genetics_appointment" />
        <field name="binding_type">report</field>
    </record>

</odoo>
