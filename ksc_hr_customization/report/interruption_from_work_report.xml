<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="interruption_from_work_report">
        <div t-attf-class="header" t-att-style="report_header_style">
            <!-- <div class="row">
                <img src="/ksc_clinic_base/static/description/logo.jpeg" style="height: 120px; width: 100%;"/>
            </div> -->
        </div>
        <div t-attf-class="footer"/>

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">

                    <div class="page">
                        <div id="header_part">
                            <div style="background-color:#C7C8CC;width:50%;margin:auto">
                                <h3 style="text-align:center;text-decoration:underline">
                                    <b>الموضوع : انقطاع عن العمل</b>
                                </h3>
                            </div>
                            <div style="margin-top:20px;direction:rtl;text-align:start">
                                <p>التاريخ : &#160;
                                    <t t-esc="o.date"/>
                                </p>
                                <b>
                                    السيد المحترم:
                                    <t t-esc="o.employee_id.name"/>
                                </b>
                                <br/>
                                <br/>


                                <b>
                                    الرقم المدني:
                                    <t t-esc="o.civil_id"/>
                                </b>
                                <br/>
                                <br/>


                                <b>
                                    نفيد سيادتكم بأن الإجازة الممنوحة لكم تنتهي بتاريخ:
                                    <t t-esc="o.leave_end_date"/>
                                </b>
                                <br/>
                                <br/>

                                <b>
                                    وأن المذكور أعلاه انقطع عن العمل بتاريخ:
                                    <t t-esc="o.interruption_date"/>
                                    وعليه إذا استمر الغياب لمدة 15 يومًا متواصلاً
                                </b>
                                <br/>
                                <br/>

                                <b>فانه سوف يكون بمثابة فصل من العمل</b>
                            </div>
                        </div>


                        <div style="margin-top:250px">
                            <br></br>
                            <br></br>
                            <br></br>
                            <br></br>
                            <br></br>
                        </div>
                        <table style="width:100%;border:none">

                            <tr>
                                <th colspan="4" style="width:  33%; text-align: center;">
                                    <span>المدير العام</span>
                                </th>

                                <th colspan="4" style="width: 33%; text-align: center;">
                                    <span>المدير التنفيذي</span>
                                </th>
                                <th colspan="4" style="width:  33%; text-align: center;">
                                    <span>رئيس القسم</span>
                                </th>

                            </tr>


                            <tr>
                                <th colspan="4" style="width:  33%; text-align: center;">
                                    <span>__________</span>
                                </th>
                                <th colspan="4" style="width:  33%; text-align: center;">
                                    <span>__________</span>
                                </th>
                                <th colspan="4" style="width: 33%; text-align: center;">
                                    <span>__________</span>
                                </th>
                            </tr>

                        </table>


                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="interruption_from_work_report_action" model="ir.actions.report">
        <field name="name">Interruption From Work Report</field>
        <field name="model">work.interruption.wizard</field>
        <!--        <field name="model">hr.employee</field>-->
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ksc_hr_customization.interruption_from_work_report</field>
        <field name="report_file">ksc_hr_customization.interruption_from_work_report</field>
        <!--        <field name="binding_model_id" ref="hr.model_hr_employee"/>-->
        <field name="binding_model_id" ref="model_work_interruption_wizard"/>
        <field name="binding_type">report</field>
    </record>


</odoo>