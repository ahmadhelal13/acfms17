        <field name="name">Warning Latter Report</field>
        <field name="model">warning.letter.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ksc_hr_customization.warning_latter_report</field>
        <field name="report_file">ksc_hr_customization.warning_latter_report</field>
        <field name="binding_model_id" ref="model_warning_letter_wizard"/>
        <field name="binding_type">report</field>
    </record>
