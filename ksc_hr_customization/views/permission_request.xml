<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="permissions_request_view_form" model="ir.ui.view">
        <field name="name">permission_request_view_form</field>
        <field name="model">permissions.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="permission_type"/>
                        <field name="day"/>
                        <field name="start_time" />
                        <field name="end_time" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="permissions_request_view_tree" model="ir.ui.view">
        <field name="name">permissions_request.view.tree</field>
        <field name="model">permissions.request</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="employee_id"/>
                <field name="permission_type"/>
                <field name="day"/>
                <field name="start_time" />
                <field name="end_time" />
            </tree>
        </field>
    </record>

    <record id="permissions_request_action" model="ir.actions.act_window">
        <field name="name">Permission Request</field>
        <field name="res_model">permissions.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Create the first Request
            </p>
        </field>
    </record>
</odoo>
