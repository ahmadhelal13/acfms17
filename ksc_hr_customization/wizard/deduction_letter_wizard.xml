<odoo>


    <record id="view_deduction_letter_wizard_form" model="ir.ui.view">
        <field name="name">deduction.letter.wizard.form</field>
        <field name="model">deduction.letter.wizard</field>
        <field name="arch" type="xml">
            <form string="Deduction Letter Wizard">
                <group>
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_generate_report" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_deduction_letter_wizard" model="ir.actions.act_window">
        <field name="name">Deduction Letter Wizard</field>
        <field name="res_model">deduction.letter.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_deduction_letter_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>