<odoo>
    <record id="view_delay_memo_wizard_form" model="ir.ui.view">
        <field name="name">delay.memo.wizard.form</field>
        <field name="model">delay.memo.wizard</field>
        <field name="arch" type="xml">
            <form string="Delay Memo Wizard">
                <group>
                    <field name="date"/>
                    <field name="day"/>
                    <field name="employee_id"/>
                    <field name="position"/>
                    <field name="reason_for_delay"/>
                    <field name="manager_opinion"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_generate_report" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_delay_memo_wizard" model="ir.actions.act_window">
        <field name="name">Delay Memo Wizard</field>
        <field name="res_model">delay.memo.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_delay_memo_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>