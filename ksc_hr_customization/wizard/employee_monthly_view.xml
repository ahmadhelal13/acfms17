<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_employee_monthly_wizard" model="ir.ui.view">
        <field name="name">view_employee_monthly_wizard</field>
        <field name="model">employee.monthly.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="employee_id"/>
                    <field name="from_date"/>
                    <field name="to_date"/>

                    <span class="badge badge-primary o_badge_margin" invisible="employee_id != '1'">
                        Done
                    </span>
                    <!-- <field name="month"/> -->
                </group>
                <footer>
                    <button name="print_employee_monthly_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="emplyee_monthly_wizard_action" model="ir.actions.act_window">
        <field name="name">Employee Monthly Report</field>
        <field name="res_model">employee.monthly.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>



</odoo>