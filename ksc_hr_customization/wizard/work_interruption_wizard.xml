<odoo>
    <record id="view_work_interruption_wizard_form" model="ir.ui.view">
        <field name="name">work.interruption.wizard.form</field>
        <field name="model">work.interruption.wizard</field>
        <field name="arch" type="xml">
            <form string="Work Interruption Wizard">
                <group>
                    <field name="employee_id"/>
                    <field name="civil_id"/>
                    <field name="date"/>
                    <field name="leave_end_date"/>
                    <field name="interruption_date"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_generate_report" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_work_interruption_wizard" model="ir.actions.act_window">
        <field name="name">Work Interruption Wizard</field>
        <field name="res_model">work.interruption.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_work_interruption_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>