    <!--    invoice action with domain-->
    <record model="ir.actions.act_window" id="medicine_invoices_request">
        <field name="name">invoices</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1,'search_default_customer_invoice': 1}</field>
        <field name="domain">[('clinic','=','medicine'),('move_type','in',['out_invoice','out_refund'])]</field>
    </record>

    <!--    payment action with domain-->
    <record model="ir.actions.act_window" id="medicine_payments_request">
        <field name="name">payments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('clinic','=','medicine')]</field>
    </record>

    <!-- ========for general report============= -->
    <record id="patient_report_wizard_view_form_inherit_medicine" model="ir.ui.view">
        <field name="name">patient_report_wizard_view_form_inherit_medicine</field>
        <field name="model">patient.wizard</field>
        <field name="inherit_id" ref="ksc_patient_report.patient_report_wizard_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_1']//group[@name='group_a']" position="inside">
                <button string="Print Medicine Infomation" name="print_medicine_info_for_this_patient" type="object" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

