<odoo>

    <!-- Patient -->
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">Patient Lab Test</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <field name="is_patient" invisible="1"/>
                <field name="is_physician" invisible="1"/>

                <button name="action_lab_requests" invisible="not is_patient" class="oe_stat_button" icon="fa-th-list" type="object" title="Lab Requests">
                    <field string="Patient Lab Requests" name="request_count" widget="statinfo"/>
                </button>
                <button name="action_view_test_results" invisible="not is_patient" class="oe_stat_button" icon="fa-flask" type="object" title="Test Results">
                    <field string="Patient Test Results" name="test_count" widget="statinfo"/>
                </button>
                <button name="action_lab_request" type="object" invisible="not is_physician" class="oe_stat_button" icon="fa-th-list">
                    <field string="Lab Request" name="lab_request_count" widget="statinfo"/>
                </button>
                <button name="action_lab_result" type="object" invisible="not is_physician" class="oe_stat_button" icon="fa-flask">
                    <field string="Lab Result" name="lab_result_count" widget="statinfo"/>
                </button>

            </div>
        </field>
    </record>

    <record id="action_account_payments" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">tree,kanban,form,graph</field>
        <field name="context">{
            'default_payment_type': 'inbound',
            'default_partner_type': 'customer',
            'search_default_inbound_filter': 1,
            'default_move_journal_types': ('bank', 'cash'),
            'laboratory':1,
            }
        </field>
        <field name="view_id" ref="account.view_account_payment_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register a payment
            </p>
            <p>
                Payments are used to register liquidity movements. You can process those payments by your own means or
                by using installed facilities.
            </p>
        </field>
    </record>

    <!--    payment action with domain-->
    <record model="ir.actions.act_window" id="laboratory_payments_request">
        <field name="name">payments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('clinic','=','laboratory')]</field>
    </record>

    <record id="action_patient_laboratory" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="domain">[('is_patient','=',True)]</field>
        <field name="context">{ 'default_is_patient' : 1 }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Patient
            </p>
        </field>
    </record>

</odoo>