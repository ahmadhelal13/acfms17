<odoo>

    <record model="ir.ui.view" id="patient_laboratory_test_request_form">
        <field name="name">Test Requests</field>
        <field name="model">ksc.laboratory.request</field>
        <field name="arch" type="xml">
            <form string="Lab Requests">
                <header>
                    <button name="button_requested" string="Submit Request" class="oe_highlight" type="object" invisible="invoice_id == False or state not in 'draft'" groups="ksc_laboratory.ksc_laboratory_manager,ksc_laboratory.ksc_laboratory_receptionist"/>
                    <!--TODO: Result from converting "states='cancel,requested'" attribute into an 'invisible' attribute
                         Manually combine states condition into any 'invisible' overrides in inheriting views as well-->
                    <button name="button_accept" invisible="state not in ['cancel', 'requested']" string="Accept" type="object" class="oe_highlight" groups="ksc_laboratory.ksc_laboratory_manager,ksc_laboratory.ksc_laboratory_technician"/>
                    <!--TODO: Result from converting "states='accepted'" attribute into an 'invisible' attribute
                         Manually combine states condition into any 'invisible' overrides in inheriting views as well-->
                    <button name="button_in_progress" invisible="state not in ['accepted']" string="In Progress" class="oe_highlight" type="object" groups="ksc_laboratory.ksc_laboratory_manager,ksc_laboratory.ksc_laboratory_receptionist,ksc_laboratory.ksc_laboratory_technician"/>
                    <!--TODO: Result from converting "states='in_progress'" attribute into an 'invisible' attribute
                         Manually combine states condition into any 'invisible' overrides in inheriting views as well-->
                    <button name="button_done" invisible="state not in ['in_progress']" string="Done" class="oe_highlight" type="object" groups="ksc_laboratory.ksc_laboratory_manager,ksc_laboratory.ksc_laboratory_technician"/>
                    <button name="create_invoice" string="Create Invoice" invisible="state == 'cancel' or no_invoice or invoice_id" type="object" class="oe_highlight" groups="ksc_laboratory.ksc_laboratory_manager,ksc_laboratory.ksc_laboratory_receptionist"/>
                    <button name="button_cancel" string="Cancel" type="object" groups="ksc_laboratory.ksc_laboratory_manager,ksc_laboratory.ksc_laboratory_receptionist,ksc_laboratory.ksc_laboratory_cashier"/>
                    <button string="print barcode labels" name="action_barcode_wizard" invisible="state == 'draft'" type="object" groups="ksc_laboratory.ksc_laboratory_manager,ksc_laboratory.ksc_laboratory_receptionist,ksc_laboratory.ksc_laboratory_technician"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,requested,accepted,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="view_invoice" string="View Invoice" invisible="not invoice_id" type="object" class="oe_stat_button" icon="fa-pencil-square-o" groups="ksc_laboratory.ksc_laboratory_manager,ksc_laboratory.ksc_laboratory_receptionist"/>
                        <button name="action_view_test_results" string="Test Results" class="oe_stat_button" icon="fa-flask" type="object" invisible="state not in ['in_progress', 'done']"/>
                        <button name="action_view_lab_samples" string="Test Samples" class="oe_stat_button" icon="fa-list" type="object" groups="ksc_laboratory.ksc_laboratory_manager,ksc_laboratory.ksc_laboratory_receptionist,ksc_laboratory.ksc_laboratory_technician"/>
                    </div>
                    <h1>
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="is_invoiced" invisible="1"/>
                            <field name="patient_id" readonly="state in ['requested','accepted','in_progress','done','cancel'] or is_invoiced" options="{'no_create':true, 'no_create_edit':True}" context="{'default_is_patient':1}"/>
                            <field name="date" readonly="state in ['requested','accepted','in_progress','done','cancel'] or is_invoiced"/>
                            <field name="physician_id" readonly="state in ['requested','accepted','in_progress','done','cancel'] or is_invoiced" options="{'no_create':true, 'no_open':true, 'no_create_edit':True}" context="{'default_is_physician':1}"/>
                            <field name="laboratory_group_id" readonly="state in ['requested','accepted','in_progress','done','cancel'] or is_invoiced" options="{'no_create':true, 'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="other_laboratory" readonly="state in ['done','cancel']" groups="ksc_laboratory.ksc_laboratory_manager,ksc_laboratory.ksc_laboratory_receptionist"/>
                            <field name="other_laboratory_visible" invisible="1"/>
                            <!-- Hidden computed field -->
                            <!-- ==================by ahmed 22/12/2022================== -->
                            <field name="out_patient"/>
                            <field name="laboratory_id" invisible="not other_laboratory_visible" readonly="state in ['done','cancel']" required="other_laboratory_visible"/>
                            <button name="action_sendmail" type="object" string="Send mail" icon="fa-envelope" class="oe_link" invisible="not other_laboratory_visible"/>
                            <button name="create_laboratory_bill" type="object" string="Create Bill" icon="fa-money" class="oe_link" invisible="not other_laboratory_visible" groups="account.group_account_invoice"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines" name="lines">
                            <group>
                                <field name="line_ids" nolabel="1" colspan="4" readonly="state in ['requested','accepted','in_progress','done','cancel'] or is_invoiced" options="{'no_create': True}">
                                    <tree string="Lines" editable="bottom">
                                        <field name="test_id" string="Test" options="{'no_create':true, 'no_create_edit':True}"/>
                                        <field name="ksc_tat" optional="show" options="{'no_create':true, 'no_create_edit':True}"/>
                                        <field name="sale_price"/>
                                        <field name="test_state" string="State" options="{'no_create': True}"/>
                                        <field name="instruction" optional="show" options="{'no_create':true, 'no_create_edit':True}"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="total_price"/>
                                </group>
                            </group>
                        </page>
                        <page string="Other Information" name="other_info" groups="ksc_laboratory.ksc_laboratory_manager,ksc_laboratory.ksc_laboratory_receptionist">
                            <group>
                                <group>
                                    <field name="lab_bill_id" readonly="1" invisible="not other_laboratory or not lab_bill_id" groups="account.group_account_invoice"/>
                                </group>
                                <group>
                                    <field name="no_invoice" readonly="state in ['requested','accepted','in_progress','done','cancel']"/>
                                    <field name="invoice_id" invisible="1"/>
                                    <field name="pricelist_id" groups="product.group_product_pricelist" options="{'no_open':True,'no_create': True, 'no_create_edit':True}"/>
                                    <field name="company_id" readonly="state in ['requested','accepted','in_progress','done','cancel']" options="{'no_create':true, 'no_create_edit':True}"/>
                                    <!-- <field name="company_id" readonly="state in ['requested','accepted','in_progress','done','cancel']" groups="base.group_multi_company" options="{'no_create':true, 'no_create_edit':True}"/> -->
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <field name="notes" placeholder="Notes" nolabel="1" colspan="4" readonly="state in ['requested','accepted','in_progress','done','cancel']"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--    laboratory create lab request form popup-->
    <record model="ir.ui.view" id="patient_laboratory_test_request_form_popup">
        <field name="name">Test Requests</field>
        <field name="model">ksc.laboratory.request</field>
        <field name="arch" type="xml">
            <form string="Lab Requests">
                <header>
                    <field name="state" widget="statusbar" invisible="1"/>
                </header>
                <h1>
                    <field name="name" class="oe_inline"/>
                </h1>
                <group>
                    <field name="patient_id" readonly="1" options="{'no_create':true, 'no_create_edit':True}"/>
                    <field name="date" readonly="1"/>
                    <field name="physician_id" options="{'no_open':true}" readonly="1"/>
                    <field name="laboratory_group_id" options="{'no_create': True}"/>
                </group>
                <notebook>
                    <page string="Lines" name="lines">
                        <group>
                            <field name="line_ids" nolabel="1" colspan="4">
                                <tree string="Lines" editable="bottom">
                                    <field name="test_id" string="Test" options="{'no_create': True}"/>
                                    <field name="ksc_tat" optional="show"/>
                                    <field name="sale_price" invisible="1"/>
                                    <field name="test_state" string="State" options="{'no_create': True}"/>
                                    <field name="instruction" optional="show"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_price"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="patient_laboratory_test_request_tree">
        <field name="name">Test Requests</field>
        <field name="model">ksc.laboratory.request</field>
        <field name="arch" type="xml">
            <tree string="Test Requests" decoration-info="state=='in_progress'" decoration-muted="state=='cancel'" decoration-danger="state in ['requested','accepted']" decoration-success="state == 'done'" name="request_tree">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="physician_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" string="Status"/>
                <field name="invoice_state" widget="badge" decoration-warning="invoice_state == 'not_paid'" decoration-success="invoice_state == 'not_paid'"/>
                <field name="has_credit_note" widget="badge" decoration-warning="has_credit_note == 'has_no_credit'" decoration-success="has_credit_note == 'has_credit'"/>
            </tree>
        </field>
    </record>

    <record id="view_ksc_laboratory_request_search" model="ir.ui.view">
        <field name="name">ksc.laboratory.request.search</field>
        <field name="model">ksc.laboratory.request</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <search string="Patient Lab Test">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="physician_id"/>
                <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="done" string="Done" domain="[('state','=','done')]"/>
                <filter name="invoiced" string="Invoiced" domain="[('state','=','invoiced')]"/>
                <filter name="invoice_exempt" string="Invoice Exempt" domain="[('state','=','invoice_exempt')]"/>
                <filter name="today" string="Today's Investigation" domain="[('date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_patient_id" string="Patient" context="{'group_by':'patient_id'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by':'date'}"/>
                    <filter name="group_by_physician" string="Doctor" context="{'group_by':'physician_id'}"/>
                    <filter name="group_by_company" string="Institution" context="{'group_by':'company_id'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_ksc_laboratory_request_calendar" model="ir.ui.view">
        <field name="name">ksc.laboratory.request.calendar</field>
        <field name="model">ksc.laboratory.request</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <!-- Updated change quick_add to quick_create -->
            <calendar mode="day" quick_create="False" string="Patient Lab Test" color="physician_id" date_start="date">
                <field name="physician_id"/>
                <field name="patient_id"/>
            </calendar>
        </field>
    </record>

    <record id="ksc_laboratory_request_pivot" model="ir.ui.view">
        <field name="name">ksc.laboratory.request.pivot</field>
        <field name="model">ksc.laboratory.request</field>
        <field name="arch" type="xml">
            <pivot string="Patient Lab Test">
                <field name="date" type="row"/>
                <field name="physician_id" type="row"/>
                <field name="patient_id" type="row"/>
            </pivot>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hms_action_lab_test_request">
        <field name="name">Lab Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ksc.laboratory.request</field>
        <field name="view_mode">tree,form,calendar,pivot</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add new Lab Request.
            </p>
        </field>
    </record>

    <!-- Laboratory Request Group -->
    <record id="view_laboratory_group_tree" model="ir.ui.view">
        <field name="name">laboratory.group.tree</field>
        <field name="model">laboratory.group</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Line">
                <field name="name"/>
                <field name="test_type"/>
            </tree>
        </field>
    </record>

    <record id="view_laboratory_group_form" model="ir.ui.view">
        <field name="name">laboratory.group.form</field>
        <field name="model">laboratory.group</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Laboratory Group">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Laboratory Group"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="test_type" required="1" options="{'no_create':true, 'no_create_edit':True}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <field name="line_ids">
                        <tree string="Lines" editable="bottom">
                            <field name="test_id" string="Test" domain="[('test_type','=',parent.test_type)]"/>
                            <field name="ksc_tat" optional="show"/>
                            <field name="sale_price"/>
                            <field name="test_state" string="State" options="{'no_create': True}"/>
                            <field name="instruction" optional="show"/>
                            <field name="test_type" optional="hide"/>
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_laboratory_group" model="ir.actions.act_window">
        <field name="name">Laboratory Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">laboratory.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add new Laboratory Group.
            </p>
        </field>
    </record>

    <!--    invoice action with domain-->
    <record model="ir.actions.act_window" id="laboratory_invoices_request">
        <field name="name">invoices</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1,'search_default_customer_invoice': 1}</field>
        <field name="domain">[('clinic','=','laboratory'),('move_type','in',['out_invoice','out_refund'])]</field>
    </record>

    <!--print_report method is called from server action-->
    <record id="action_laboratory_report_payments" model="ir.actions.server">
        <field name="name">Sale Report</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_ksc_laboratory_request"/>
        <field name="state">code</field>
        <field name="code">
            action = model.print_report()
        </field>
    </record>

</odoo>