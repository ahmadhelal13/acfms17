<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- Ophthalmology Finding -->
    <record id="view_ksc_ophthalmology_finding_tree" model="ir.ui.view">
        <field name="name">ksc.ophthalmology.finding.tree</field>
        <field name="model">ksc.ophthalmology.finding</field>
        <field name="arch" type="xml">
            <tree string="Ophthalmology Finding" editable="bottom">
                <field name="eye_structure"/>
                <field name="affected_eye"/>
                <field name="finding"/>
            </tree>
        </field>
    </record>

    <!-- Ophthalmology Evaluation -->
    <record id="view_ksc_ophthalmology_evaluation_search" model="ir.ui.view">
        <field name="name">ksc.ophthalmology.evaluation.search</field>
        <field name="model">ksc.ophthalmology.evaluation</field>
        <field name="arch" type="xml">
            <search string="Ophthalmology Evaluation">
                <field name="name"/>
                <field name="physician_id"/>
                <field name="patient_id"/>
                <newline/>
                <group expand="0" string="Group By...">
                    <filter string="State" name="state_groupby" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_ksc_ophthalmology_evaluation_tree" model="ir.ui.view">
        <field name="name">ksc.ophthalmology.evaluation.tree</field>
        <field name="model">ksc.ophthalmology.evaluation</field>
        <field name="arch" type="xml">
            <tree string="Ophthalmology Evaluation" decoration-muted="state=='done'" decoration-info="state=='in_rogress'">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="age"/>
                <field name="physician_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_ksc_ophthalmology_evaluation_form" model="ir.ui.view">
        <field name="name">ksc.ophthalmology.evaluation.form</field>
        <field name="model">ksc.ophthalmology.evaluation</field>
        <field name="arch" type="xml">
            <form string="Ophthalmology Evaluation">
                <header>
                    <!--TODO: Result from converting "states='draft'" attribute into an 'invisible' attribute
                         Manually combine states condition into any 'invisible' overrides in inheriting views as well-->
                    <button name="action_inprogress" invisible="state not in ['draft']" string="Start Evaluation" type="object" class="oe_highlight"/>
                    <!--TODO: Result from converting "states='in_progress'" attribute into an 'invisible' attribute
                         Manually combine states condition into any 'invisible' overrides in inheriting views as well-->
                    <button name="action_done" invisible="state not in ['in_progress']" string="Done" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progree,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" readonly="state in ['cancel','done']" context="{'default_is_patient':1}"/>
                            <field name="date" readonly="state in ['cancel','done']"/>
                            <field name="appointment_id" readonly="state in ['cancel','done']"/>
                        </group>
                        <group>
                            <field name="physician_id" readonly="state in ['cancel','done']" context="{'default_is_physician':1}"/>
                            <field name="age"/>
                            <field name="diseases_ids" readonly="state in ['cancel','done']" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="optometry" string="Optometry">
                            <separator string="Refraction"/>
                            <group name="dva_details">
                                <group string="Right Eye" name="rdva_details">
                                    <field name="rdva" readonly="state in ['cancel','done']"/>
                                    <field name="rdva_pinhole" readonly="state in ['cancel','done']"/>
                                    <field name="rdva_aid" readonly="state in ['cancel','done']"/>
                                    <field name="rnv" readonly="state in ['cancel','done']"/>
                                </group>
                                <group string="Left Eye" name="ldva_details">
                                    <field name="ldva" readonly="state in ['cancel','done']"/>
                                    <field name="ldva_pinhole" readonly="state in ['cancel','done']"/>
                                    <field name="ldva_aid" readonly="state in ['cancel','done']"/>
                                    <field name="lnv" readonly="state in ['cancel','done']"/>
                                </group>
                            </group>
                            <group name="exis_details">
                                <group name="rexis_details">
                                    <field name="rspherical" readonly="state in ['cancel','done']"/>
                                    <field name="rcylinder" readonly="state in ['cancel','done']"/>
                                    <field name="raxis" readonly="state in ['cancel','done']"/>
                                    <field name="rnv_add" readonly="state in ['cancel','done']"/>
                                </group>
                                <group name="lexis_details">
                                    <field name="lspherical" readonly="state in ['cancel','done']"/>
                                    <field name="lcylinder" readonly="state in ['cancel','done']"/>
                                    <field name="laxis" readonly="state in ['cancel','done']"/>
                                    <field name="lnv_add" readonly="state in ['cancel','done']"/>
                                </group>
                            </group>

                            <separator string="Best Corrected Visual Acuity"/>
                            <group name="bcva_details">
                                <group string="Right Eye" name="rbcva_details">
                                    <field name="rbcva_spherical" readonly="state in ['cancel','done']"/>
                                    <field name="rbcva_cylinder" readonly="state in ['cancel','done']"/>
                                    <field name="rbcva_axis" readonly="state in ['cancel','done']"/>
                                    <field name="rbcva" readonly="state in ['cancel','done']"/>
                                    <field name="rbcva_nv_add" readonly="state in ['cancel','done']"/>
                                    <field name="rbcva_nv" readonly="state in ['cancel','done']"/>
                                </group>
                                <group string="Left Eye" name="lbcva_details">
                                    <field name="lbcva_spherical" readonly="state in ['cancel','done']"/>
                                    <field name="lbcva_cylinder" readonly="state in ['cancel','done']"/>
                                    <field name="lbcva_axis" readonly="state in ['cancel','done']"/>
                                    <field name="lbcva" readonly="state in ['cancel','done']"/>
                                    <field name="lbcva_nv_add" readonly="state in ['cancel','done']"/>
                                    <field name="lbcva_nv" readonly="state in ['cancel','done']"/>
                                </group>
                            </group>
                            <group string="Tonometry" name="tonometry">
                                <field name="iop_method" readonly="state in ['cancel','done']"/>
                            </group>
                            <group name="iop_details">
                                <group name="riop_details">
                                    <field name="riop" readonly="state in ['cancel','done']"/>
                                </group>
                                <group name="liop_details">
                                    <field name="liop" readonly="state in ['cancel','done']"/>
                                </group>
                            </group>
                        </page>
                        <page name="findings" string="Findings">
                            <field name="findings_ids" readonly="state in ['cancel','done']">
                                <tree string="Ophthalmology Finding" editable="bottom">
                                    <field name="affected_eye"/>
                                    <field name="eye_structure"/>
                                    <field name="finding"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field name="notes" readonly="state in ['cancel','done']"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_ksc_ophthalmology_evaluation">
        <field name="name">Ophthalmology Evaluation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ksc.ophthalmology.evaluation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add new record.
            </p>
        </field>
    </record>


    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">ksc.appointment</field>
        <field name="view_mode">tree,form,kanban,calendar,pivot</field>
        <field name="domain" eval="[('department_id.department_type','=','ophthalmology')]"/>
        <field name="context">{'search_default_today': 1,'search_default_done': 1,'is_ophthalmology_appointment': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add an Ophthalmology Appointment.
            </p>
        </field>
    </record>

</odoo>