<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="patinet_file_template_report" name="patinet_file_template_report">
        <div t-attf-class="header" t-att-style="report_header_style">
            <div class="row">
                <img src="/ksc_dental/static/description/logo.jpeg" style="height: 100px; width: 100%;margin-bottom:0px"/>
            </div>
        </div>
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <link rel="stylesheet" type="text/css" href="/ksc_patient_report/static/src/css/style.css"/>
                <div class="page">
                    <div class="header_title">
                        <h4 style="text-align:center;text-decoration:underline">PATIENT REPORT</h4>
                    </div>
                    <t t-foreach="docs" t-as="doc">
                        <t t-call="ksc_patient_report.patient_info_template_2"/>
                        <br/>
                        <t t-call="ksc_patient_report.patient_medical_history_report_template_2"/>
                        <br/>
                        <t t-call="ksc_patient_report.patient_evaluation_template_2"/>
                        <br/>
                        <t t-call="ksc_patient_report.patient_diseases_template_2"/>
                        <br/>
                    </t>
                </div>
                <p style="page-break-after:always;display:none"></p>
            </t>
        </t>
    </template>
    <record id="patient_file_general_report_action" model="ir.actions.report">
        <field name="name">Patient File</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">ksc_patient_report.patinet_file_template_report</field>
        <field name="report_file">ksc_patient_report.patinet_file_template_report</field>
        <field name="binding_model_id" ref="base.model_res_partner" />
        <field name="binding_type">report</field>
    </record>

</odoo>
