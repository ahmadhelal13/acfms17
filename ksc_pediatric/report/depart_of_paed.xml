<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="paediatric_report_template">
        <div t-attf-class="header" t-att-style="report_header_style">
            <div class="row">
                <img src="/ksc_clinic_base/static/description/logo.jpeg" style="height: 120px; width: 100%;"/>
            </div>
        </div>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="line">
                <t t-call="web.external_layout">
                    <div class="page">
                        <br></br>
                        <br></br>
                        <h1 style="text-align:center;">Paediatric</h1>
                        <br></br>
                        <table class="table" style="text-align:center">
                            <thead>
                                <th>
                                        Date
                                </th>
                                <th>
                                        Name
                                </th>
                                <th>
                                        Age
                                </th>
                                <th>
                                       Sex
                                </th>
                                <th>
                                       File No.
                                </th>

                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <span t-field="line.start_date" />
                                    </td>
                                    <td>
                                        <span t-field="line.patient_id" />
                                    </td>
                                    <td>
                                        <span t-esc="line.patient_id.age[:8]" />
                                    </td>
                                    <td>
                                        <span t-field="line.patient_id.gender" />
                                    </td>
                                    <td>
                                        <span t-field="line.patient_id.general_file_no" />
                                    </td>

                                </tr>
                            </tbody>
                        </table>


                        <p>
                            <b>Presenting symptoms:</b>
                            <br />
                            <div style="border:1px solid black; margin-left: 30px;height:25px;border-radius:2px">
                                <span t-field="line.presenting_symptoms" />
                            </div>

                        </p>


                        <p>
                            <b>CURRENT DRUG THERAPY:</b>
                            <br />
                            <div style="border:1px solid black; margin-left: 30px;height:25px;border-radius:2px">
                                <span t-field="line.presenting_symptoms" />
                            </div>

                        </p>
                        <p>
                            <b>HISTORY OR ALLERGY:</b>
                            <br />
                            <div style="border:1px solid black; margin-left: 30px;height:25px;border-radius:2px">
                                <span t-field="line.history_or_allergy" />
                            </div>

                        </p>

                        <p>
                            <b>TEST HISTORY:</b>
                            <br />
                            <div style="border:1px solid black; margin-left: 30px;height:25px;border-radius:2px">
                                <span t-field="line.test_history" />
                            </div>

                        </p>
                        <p>
                            <b>DEVELOPMENT HISTORY:</b>
                            <br />
                            <div style="border:1px solid black; margin-left: 30px;height:25px;border-radius:2px">
                                <span t-field="line.development_history" />
                            </div>

                        </p>

                        <p>
                            <b>FAMILY HISTORY:</b>
                            <br />
                            <div style="border:1px solid black; margin-left: 30px;height:25px;border-radius:2px">
                                <span t-field="line.family_history" />
                            </div>

                        </p>

                        <p>
                            <b>IMMUNIZATION HISTORY:</b>
                            <br />
                            <div style="border:1px solid black; margin-left: 30px;height:25px;border-radius:2px">
                                <span t-field="line.immunization_history" />
                            </div>

                        </p>


                        <p>
                            <b>DIET HISTORY:</b>
                            <br />
                            <div style="border:1px solid black; margin-left: 30px;height:25px;border-radius:2px">
                                <span t-field="line.diet_history" />
                            </div>

                        </p>

                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="paediatric_report_action" model="ir.actions.report">
        <field name="name">Department Of Paediatric</field>
        <field name="model">ksc.pediatric.appointment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ksc_pediatric.paediatric_report_template</field>
        <field name="report_file">ksc_pediatric.paediatric_report_template</field>
        <field name="binding_model_id" ref="model_ksc_pediatric_appointment" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="ksc_clinic_base.paperformat_layout_general_format"/>
    </record>

</odoo>