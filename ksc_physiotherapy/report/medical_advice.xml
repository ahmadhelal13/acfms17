<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="medical_advice_template">
        <div t-attf-class="header" t-att-style="report_header_style">
            <div class="row">
                <img src="/ksc_clinic_base/static/description/logo.jpeg" style="height: 120px; width: 100%;"/>
            </div>
        </div>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <table class="table table-bordered table-sm">
                            <thead>
                                <th>APP</th>
                                <th>Patient</th>
                                <th>Date</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <span t-field="o.name"/>
                                    </td>
                                    <td>
                                        <span t-field="o.patient_id"/>
                                    </td>
                                    <td>
                                        <span t-field="o.start_date"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br></br>

                        <h1 style="text-align:center;">Medical Advice</h1>
                        <br></br>
                        <div t-if="o.differencial_diagnosis">
                            <h3>
                                <u>Differential Diagnosis</u>
                            </h3>
                            <p style="margin-left: 30px;">
                                <span t-field="o.differencial_diagnosis" />
                            </p>
                        </div>
                        <hr></hr>
                        <br></br>
                        <div t-if="o.medical_advice">
                            <h3>
                                <u>Medical Advice</u>
                            </h3>
                            <p style="margin-left: 30px;">
                                <span t-field="o.medical_advice" />
                            </p>
                        </div>
                        <hr></hr>
                        <br></br>
                        <div t-if="o.notes">
                            <h3>
                                <u>Notes</u>
                            </h3>
                            <p style="margin-left: 30px;">
                                <span t-field="o.notes" />
                            </p>
                        </div>
                        <hr></hr>
                        <br></br>
                        <div t-if="o.diseases_ids">
                            <h3>
                                <u>Diseases</u>
                            </h3>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.diseases_ids" t-as="line">
                                        <td>
                                            <span t-field="line.disease_id.name" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="diagnosis_report_action" model="ir.actions.report">
        <field name="name">D&amp;D Advice</field>
        <field name="model">ksc.physiotherapy.appointment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ksc_physiotherapy.medical_advice_template</field>
        <field name="report_file">ksc_physiotherapy.medical_advice_template</field>
        <field name="binding_model_id" ref="model_ksc_physiotherapy_appointment" />
        <field name="binding_type">report</field>
    </record>

</odoo>