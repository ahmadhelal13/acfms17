<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="presc_report_header">
        <div t-attf-class="header" t-att-style="report_header_style">
            <div class="row">
                <img src='/ksc_prescription_model/static/src/logo.jpeg' style="height: 120px; width: 100%;"/>
            </div>
        </div>
    </template>
    <record id="paperformat_invoice_a5_prescription" model="report.paperformat">
        <field name="name">A5 invoice</field>
        <field name="default" eval="True"/>
        <field name="format">A5</field>
        <field name="orientation">Portrait</field>
        <!-- <field name="orientation">Landscape</field> -->
        <field name="margin_top">20</field>
        <field name="margin_bottom">1</field>
        <field name="margin_left">1</field>
        <field name="margin_right">1</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>
    <!--  PDF print prescription  -->
    <record id="prescription_print" model="ir.actions.report">
        <field name="name">prescription List</field>
        <field name="model">prescription.creation</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ksc_prescription_model.prescription_lines</field>
        <field name="report_file">ksc_prescription_model.prescription_lines</field>
        <field name="binding_model_id" ref="model_prescription_creation"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_invoice_a5_prescription"/>
    </record>


</odoo>