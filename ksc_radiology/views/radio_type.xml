<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    action radio type-->
    <record id="action_ksc_radiology_test_type" model="ir.actions.act_window">
        <field name="name">Radio Type</field>
        <field name="res_model">radio.test.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Radio Type
            </p>
        </field>
    </record>


    <!--    form view radio lines-->
    <record id="form_view_ksc_radiology_radio_test" model="ir.ui.view">
        <field name="name">ksc.radiology.radio.test.form</field>
        <field name="model">radio.lines</field>
        <field name="arch" type="xml">
            <form string="Radio Test">
                <sheet>
                    <group>
                        <field name="name"></field>
                        <field name="radio_type_id"></field>
                        <field name="product_id"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    tree view radio lines-->
    <record id="tree_view_ksc_radiology_radio_test" model="ir.ui.view">
        <field name="name">ksc.radiology.radio.test.form</field>
        <field name="model">radio.lines</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"></field>
                <field name="radio_type_id"></field>
                <field name="product_id"></field>
            </tree>
        </field>
    </record>

    <!--    action radio lines-->
    <record id="action_ksc_radiology_test_lines" model="ir.actions.act_window">
        <field name="name">Radio</field>
        <field name="res_model">radio.lines</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Radio Type
            </p>
        </field>
    </record>
</odoo>