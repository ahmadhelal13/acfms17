<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="ksc_dental_appointment_form" model="ir.ui.view">
            <field name="name">ksc.dental.appointment.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="dental_page" string="Dental Appointments" invisible="not is_patient" groups="ksc_dental.ksc_dental_doctor,ksc_dental.ksc_dental_manager,ksc_dental.ksc_dental_receptionist">
                        <field name="dent_app_ids">
                            <tree create="0">
                                <field name="dent_app_id"/>
                                <field name="room_id"/>
                                <field name="doctor_id"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>