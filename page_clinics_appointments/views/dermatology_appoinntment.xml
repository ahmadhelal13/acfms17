<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="ksc_dermatology_appoinntment_form" model="ir.ui.view">
            <field name="name">ksc.dermatology.appoinntment.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="dermatology_page" string="Dermatology Appointments" invisible="not is_patient" groups="ksc_dermatology.ksc_dermatology_doctor,ksc_dermatology.ksc_dermatology_manager,                           ksc_dermatology.ksc_dermatology_receptionist">
                        <field name="dermat_app_ids">
                            <tree create="0">
                                <field name="dermat_app_id"/>
                                <field name="room_id"/>
                                <field name="doctor_id"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>