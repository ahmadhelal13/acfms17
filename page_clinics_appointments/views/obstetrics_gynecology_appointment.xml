<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="ksc_obstetrics_gynecology_appointment_form" model="ir.ui.view">
            <field name="name">ksc.obstetrics_gynecology.appointment.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="obstetrics_gynecology_page" string="Obstetrics Gynecology Appointments" invisible="not is_patient" groups="ksc_obstetrics_and_gynecology.ksc_obstetrics_and_gynecology_doctor,ksc_obstetrics_and_gynecology.ksc_obstetrics_and_gynecology_manager,ksc_obstetrics_and_gynecology.ksc_obstetrics_and_gynecology_receptionist">
                        <field name="obs_app_ids">
                            <tree create="0">
                                <field name="obs_app_id"/>
                                <field name="room_id"/>
                                <field name="doctor_id"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>