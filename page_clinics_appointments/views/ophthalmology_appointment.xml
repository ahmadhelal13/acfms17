<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="ksc_ophthalmology_appointment_form" model="ir.ui.view">
            <field name="name">ksc.ophthalmology.appointment.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="ophthalmology_page" string="Ophthalmology Appointments" invisible="not is_patient" groups="ksc_ophthalmology.ksc_ophthalmology_doctor,ksc_ophthalmology.ksc_ophthalmology_manager, ksc_ophthalmology.ksc_ophthalmology_receptionist">
                        <field name="opth_app_ids">
                            <tree create="0">
                                <field name="opth_app_id"/>
                                <field name="room_id"/>
                                <field name="doctor_id"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>