<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="ksc_orthopedic_appointment_form" model="ir.ui.view">
            <field name="name">ksc.orthopedic.appointment.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="orthopedic_page" string="Orthopedic Appointments" invisible="not is_patient" groups=" ksc_orthopedic.ksc_orthopedic_doctor,ksc_orthopedic.ksc_orthopedic_manager, ksc_orthopedic.ksc_orthopedic_receptionist">
                        <field name="orth_app_ids">
                            <tree create="0">
                                <field name="orth_app_id"/>
                                <field name="room_id"/>
                                <field name="doctor_id"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>