<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="ksc_practitioner_appointment_form" model="ir.ui.view">
            <field name="name">ksc.practitioner.appointment.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="practitioner_page" string="Practitioner Appointments" invisible="not is_patient" groups="ksc_general_practitioner.ksc_practitioner_doctor,                           ksc_general_practitioner.ksc_practitioner_manager,                           ksc_general_practitioner.ksc_practitioner_receptionist">
                        <field name="pract_app_ids">
                            <tree create="0">
                                <field name="pract_app_id"/>
                                <field name="room_id"/>
                                <field name="doctor_id"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>