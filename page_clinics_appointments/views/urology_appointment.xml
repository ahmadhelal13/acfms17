<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="ksc_urology_appointment_form" model="ir.ui.view">
            <field name="name">ksc.urology.appointment.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="urology_page" string="Urology Appointments" invisible="not is_patient" groups="ksc_urology.ksc_urology_doctor                                 ,ksc_urology.ksc_urology_manager,                                 ksc_urology.ksc_urology_receptionist                                 ">
                        <field name="urol_app_ids">
                            <tree create="0">
                                <field name="urol_app_id"/>
                                <field name="room_id"/>
                                <field name="doctor_id"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>